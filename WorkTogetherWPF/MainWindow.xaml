<Window x:Class="WorkTogetherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTogetherWPF" xmlns:views="clr-namespace:WorkTogetherWPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Aqua" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button x:Name="Utilisateur" Click="Utilisateur_Click" Content="Utilisateur"/>
            <Button x:Name="Baie" Click="Baie_Click" Content="Baie"/>
            <Button x:Name="Report" Click="Report_Click" Content="Report"/>
            <Button x:Name="Forfait" Click="Forfait_Click" Content="Forfait"/>
        </StackPanel>
        <DockPanel Grid.Column="1" x:Name="DockPanel">
            <views:HomeView/>
        </DockPanel>
    </Grid>
</Window>